{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["@types/chrome"],
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "../types"]
}
